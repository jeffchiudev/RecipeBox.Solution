@{
    Layout = "_Layout";
}

@model RecipeBox.Models.Tag

<h2>Edit</h2>
<hr />

<h4>Edit this tag: @Html.DisplayFor(model => model.TagName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TagId)

    @Html.EditorFor(model => model.TagName)

    <input type="submit" value="Edit Tag" class="btn btn-primary" />
}
<hr />
<p>@Html.ActionLink("Back to list of Tags", "Index", null, null, new {@class="btn btn-primary"})</p>
<p>@Html.ActionLink("Home", "Index", "Home", null, new {@class="btn btn-primary"})</p>