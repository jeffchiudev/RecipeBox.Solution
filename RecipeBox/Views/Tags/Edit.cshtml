@{
    Layout = "_Layout";
}

@model RecipeBox.Models.Tag

<h2>Edit</h2>
<hr/>

<h4>Edit this tag: @Html.DisplayFor(model => model.TagName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TagId)

    @Html.LabelFor(model => model.TagName)
    @Html.EditorFor(model => model.TagName)

    <input type="submit" value="Save" />
}
<hr/>
<p>@Html.ActionLink("Back to list of Tags", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>