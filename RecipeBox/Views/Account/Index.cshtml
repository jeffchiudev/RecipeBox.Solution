@{
    Layout = "_Layout";
}

@using System.Security.Claims

<h1>Recipe Box Account Login</h1>
<hr />
@if (User.Identity.IsAuthenticated)
{
<h2>Welcome Back @User.Identity.Name!</h2>
@using (Html.BeginForm("LogOff", "Account"))
{
    <input type="submit" class="btn btn-primary" value="Log Out"/>
}
}
else
{
    <p>@Html.ActionLink("Register", "Register", null, null, new {@class="btn btn-primary"})</p>
    <p>@Html.ActionLink("Log In", "Login", null, null, new {@class="btn btn-primary"})</p>
}
<hr>
<p>@Html.ActionLink("Home", "Index", "Home", null, new {@class="btn btn-primary"})</p>