@{
    Layout = "_Layout";
}
@using System.Security.Claims
@using RecipeBox.Models;
@* @model List<Recipe>; *@

<h2>Your search results:</h2>
<hr />
@if (Model.Count == 0)
{
    <p>No Recipes were found!</p>
}

@foreach (Recipe recipe in Model)
{
    <h3>@Html.ActionLink($"{recipe.RecipeName}", "Details", new { id = recipe.RecipeId})</h3>
}

<p>@Html.ActionLink("Return to recipe list", "Index", null, null, new {@class="btn btn-primary"})</p>
<p>@Html.ActionLink("Home", "Index", "Home", null, new {@class="btn btn-primary"})</p>