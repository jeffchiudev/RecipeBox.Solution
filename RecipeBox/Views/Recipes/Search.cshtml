@{
    Layout = "_Layout";
}

@using RecipeBox.Models;
@model List<Recipe>;

<h2>Your search results:</h2>
<hr />
@if (Model.Count == 0)
{
    <p>No Recipes were found!</p>
}

@foreach (Recipe recipe in Model)
{
    <h3>@Html.ActionLink($"{recipe.RecipeName}", "Details", new { id = recipe.RecipeId})</h3>
}

<p>@Html.ActionLink("Return to recipe list", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>