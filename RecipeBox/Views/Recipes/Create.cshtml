@{
    Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h4>Add a new recipe!</h4>

@using (Html.BeginForm())
{
    <p>Recipe Title:</p>
    @Html.TextBoxFor(model => model.RecipeName)

    <p>Recipe Ingredients:</p>
    @Html.TextAreaFor(model => model.Ingredient, new { cols = "55", rows = "10" })

    <p>Recipe Instructions:</p>
    @Html.TextAreaFor(model => model.Instructions, new { cols = "55", rows = "10" })

    <p>Recipe Rating:</p>
    <p>@Html.RadioButtonFor(model => model.Rating, "*") 1 Star</p>
    <p>@Html.RadioButtonFor(model => model.Rating, "**") 2 Star</p>
    <p>@Html.RadioButtonFor(model => model.Rating, "***") 3 Star</p>
    <p>@Html.RadioButtonFor(model => model.Rating, "****") 4 Star</p>
    <p>@Html.RadioButtonFor(model => model.Rating, "*****") 5 Star</p>

    @Html.Label("Select a Recipe Tag")
    @Html.DropDownList("TagId")

    <input type="submit" value="Add new recipe" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all recipes", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>