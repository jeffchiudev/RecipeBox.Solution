@{
    Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h2>Add a New Recipe!</h2>
<hr />
@using (Html.BeginForm())
{
    <h3>Recipe Title:</h3>
    @Html.TextBoxFor(model => model.RecipeName)

    <h3>Recipe Ingredients:</h3>
    @Html.TextAreaFor(model => model.Ingredient, new { cols = "55", rows = "10" })

    <h3>Recipe Instructions:</h3>
    @Html.TextAreaFor(model => model.Instructions, new { cols = "55", rows = "10" })

    <h3>Recipe Rating:</h3>
    <p>@Html.RadioButtonFor(model => model.Rating, "*") 1 Star <img
            src="https://i.pinimg.com/originals/68/49/50/684950461e93bbcdfa97f64ab0047203.png" width="4%" height="auto"
            style="border-radius: 50%"></p>
    <p>@Html.RadioButtonFor(model => model.Rating, "**") 2 Star<img
            src="https://s3-us-west-2.amazonaws.com/rpmmultisite/wp-content/uploads/sites/38/2018/03/15220551/ThumbsDownEmoji.jpg"
            width="4%" height="auto" style="border-radius: 50%"></p>
    <p>@Html.RadioButtonFor(model => model.Rating, "***") 3 Star<img
            src="https://emojipedia-us.s3.dualstack.us-west-1.amazonaws.com/thumbs/120/lg/57/neutral-face_1f610.png"
            width="4%" height="auto" style="border-radius: 50%"></p>
    <p>@Html.RadioButtonFor(model => model.Rating, "****") 4 Star<img
            src="https://e7.pngegg.com/pngimages/925/558/png-clipart-smiley-emoji-emoticon-sticker-blushing-emoji-miscellaneous-face.png"
            width="4%" height="auto" style="border-radius: 50%"></p>
    <p>@Html.RadioButtonFor(model => model.Rating, "*****") 5 Star<img
            src="https://image.shutterstock.com/image-vector/drooling-emoji-face-flat-style-260nw-1649246248.jpg" width="4%"
            height="auto" style="border-radius: 50%"></p>

    @Html.Label("Select a Recipe Tag")
    @Html.DropDownList("TagId")

    <input type="submit" value="Add new recipe" class="btn btn-primary" />
}
<hr />
<p>@Html.ActionLink("Show all recipes", "Index", null, null, new {@class="btn btn-primary"})</p>
<p>@Html.ActionLink("Home", "Index", "Home", null, new {@class="btn btn-primary"})</p>